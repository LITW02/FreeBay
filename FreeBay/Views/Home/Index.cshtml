@{
    Layout = null;
}

@using FreeBay.Data;
@model FreeBay.Models.IndexViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container" style="margin-top: 40px;">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <a href="/home/new" class="btn btn-primary btn-block">Post New Item</a>
                @foreach (Item item in Model.Items)
                {
                    <div class="well" style="margin-top: 20px;">
                        <div class="row">
                            <div class="col-md-4">
                                @item.Name
                            </div>
                            <div class="col-md-4 col-md-offset-2">
                                @item.PhoneNumber
                            </div>
                        </div>
                        <p style="font-weight: bold; margin-top: 10px;">@item.Description</p>
                        <br/>
                        @if (Model.MyIds != null && Model.MyIds.Any(i => i == item.Id))
                        {
                            <form method="POST" action="/home/delete">
                                <input type="hidden" name="itemid" value="@item.Id"/>
                                <button class="btn btn-danger">Delete</button>
                            </form>
                        }
                    </div>
                }

            </div>
        </div>
    </div>
</body>
</html>
